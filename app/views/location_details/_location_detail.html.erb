<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Location Details</h4>
    </div>
    <%= form_tag location_detail_resolve_path, id: 'location_detail' do |f| %>
      <div class="modal-body">
        <div class="row">
          <div class="form-group">
            <div class="col-md-2 text-right">
              <%= label_tag :address %>
              <span class="mandatory">*</span>
            </div>
            <div class="col-md-9">
              <%= text_field_tag :address,nil,required: true,style: 'width:100%;' %>
            </div>
            <input type='hidden' id='curr_lat' name='curr_lat'>
            <input type='hidden' id='curr_long' name='curr_long'>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= submit_tag "Save" ,:class=>"btn btn-primary",data: { disable_with: "Please wait..." }%>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>