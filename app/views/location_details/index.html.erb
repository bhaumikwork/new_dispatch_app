<p id="notice"><%= notice %></p>

<h1>Listing Location Details</h1>

<table>
  <thead>
    <tr>
      <th>Dest lat</th>
      <th>Dest long</th>
      <th>Source lat</th>
      <th>Source long</th>
      <th>Eta</th>
      <th>Url token</th>
      <th>Dispatcher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_details.each do |location_detail| %>
      <tr>
        <td><%= location_detail.dest_lat %></td>
        <td><%= location_detail.dest_long %></td>
        <td><%= location_detail.source_lat %></td>
        <td><%= location_detail.source_long %></td>
        <td><%= location_detail.eta %></td>
        <td><%= location_detail.url_token %></td>
        <td><%= location_detail.dispatcher %></td>
        <td><%= link_to 'Show', location_detail %></td>
        <td><%= link_to 'Edit', edit_location_detail_path(location_detail) %></td>
        <td><%= link_to 'Destroy', location_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

