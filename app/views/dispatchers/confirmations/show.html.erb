<h2>You're almost done! Now create a password to securely access your account.</h2>
  <%= form_for(resource, :as => resource_name, :url => confirm_path) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
    	<%= f.label :password %><br />
      <%= f.password_field :password,autofocus: true,class: 'form-control' %>
    </div>
    <div class="form-group">
    	<%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation,class: 'form-control' %>
    </div>
      <%= f.hidden_field :confirmation_token, :input_html => { :value => @original_token } %>
    <div class="form-group">
      <%= f.submit 'Confirm Account' %>
    </div>
  <% end %>
